.homepage {
  width: 100%;
  height: 100%;
}
.homepage .header {
    width: 100%;
    height: 500rpx;
    background: #490B68;
}
.homepage .header .header-img {
      width: 140rpx;
      height: 140rpx;
      border-radius: 50%;
      margin-bottom: 20rpx;
}
.homepage .header .login {
      font-size: 30rpx;
      color: white;
}
.homepage .section {
    padding-left: 40rpx;
}
.homepage .section .clm {
      padding: 30rpx 20rpx 30rpx 0;
      border-bottom: 1rpx solid #F0F0F0;
}
.homepage .section .clm .clm-icon {
        width: 40rpx;
        height: 40rpx;
}
.homepage .section .clm .clm-font {
        font-size: 30rpx;
        color: #373737;
        margin-left: 15rpx;
}
.homepage .section .clm .phone {
        font-size: 30rpx;
        color: #FF03B6;
}
.homepage .section .clm .question-icon {
        width: 30rpx;
        height: 30rpx;
        margin-left: 10rpx;
}
.homepage .masker {
    width: 100%;
    height: 100%;
    position: fixed;
    left: 0;
    top: 0;
    background: rgba(0, 0, 0, 0.63);
}
.homepage .masker .question-tips {
      width: 565rpx;
      height: 441rpx;
      background: white;
      border-radius: 10rpx;
}
.homepage .masker .question-tips .tips-header {
        width: 100%;
        padding: 25rpx 0;
        font-size: 34rpx;
        font-family: PingFangSC;
        font-weight: 400;
        color: black;
        line-height: 48rpx;
        border-bottom: 1rpx solid #d8d8d8;
}
.homepage .masker .question-tips .tips-section {
        width: 504rpx;
        height: 120rpx;
        font-size: 28rpx;
        font-family: PingFangSC;
        font-weight: 400;
        color: black;
        line-height: 40rpx;
        padding-top: 26rpx;
}
.homepage .masker .question-tips .spe {
        color: #47086c;
}
.homepage .masker .question-tips .btn-group {
        width: 100%;
        margin: 75rpx 0 28rpx 0;
}
.homepage .masker .question-tips .btn-group .btn {
          width: 200rpx;
          height: 56rpx;
          font-size: 28rpx;
          font-family: PingFangSC;
          font-weight: 400;
          color: black;
          background: white;
          border-radius: 10rpx;
          border: 1px solid #cccccc;
}
.homepage .masker .question-tips .btn-group .charge-btn {
          background: #47086c;
          color: white;
}

